<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="rs.etf.ms130329.ballgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".polygon.controller.PolygonController"/>
        <activity android:name=".game.controller.GameController" android:hardwareAccelerated="true"/>
        <activity android:name=".statistics.controller.StatisticsActivity"/>
    </application>

</manifest>